@model LoginDTO;
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewBag.CurrentUrl = "~/Auth/Login";
}

<div class="text-grey">
    <span>Eris</span>
    <i class="fa-solid fa-caret-right"></i>
    <span>Login</span>
</div>

<div class="form-container">
    Haven't Registered? <a asp-action="Register" asp-controller="Auth" class="link-hover">Register</a>
    <h2 class="text-large">Login</h2>

    <form id="myLoginForm">
        @*Email*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label p-0 m-0">Email</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" />
                <span id="EmailError" class="text-red"></span>
            </div>
        </div>

        @*Password*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Password" class="form-label p-0 m-0">Password</label>
            </div>
            <div class="flex-1">
                <input asp-for="Password" class="form-input" />
                <span id="PasswordError" class="text-red"></span>
            </div>
        </div>

        @*Register button*@
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button button-green-back" type="button" onclick="submitForm()">Login</button>
            </div>
        </div>

    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>